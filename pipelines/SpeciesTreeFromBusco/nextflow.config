params {
    dir = ""
    url = ""
    species_set = ""
    collection = ""
    dump_path = ""
    anno_cache = ""
    busco_proteins = "$HPS_HOME/Workspace/busco_tree/eukaryota_odb10/refseq_db.faa"
    results_dir = "$HPS_HOME/Pipelines/SpeciesTreeRes"
