<?xml version="1.0" encoding="UTF-8"?>
<compara_db division="protists">

  <!-- Collections are species-sets that are needed to define several mlsss -->
  <collections>

    <!-- All representative genomes from Eukaryotes - whilst not a monophyeltic clade, this
         taxonomic grouping excludes Metazoa, Plants and Fungi except as outgroups -->
    <collection name="default">
      <taxonomic_group taxon_name="Eukaryota"/>
    </collection>

  </collections>

  <pairwise_alignments>

    <!-- LastZ batch -->
    <all_vs_all method="LASTZ_NET">
      <species_set>
        <genome name="globisporangium_ultimum"/>
        <genome name="phytophthora_infestans"/>
        <genome name="phytophthora_kernoviae"/>
        <genome name="phytophthora_lateralis"/>
        <genome name="phytophthora_parasitica"/>
        <genome name="phytophthora_ramorum"/>
        <genome name="pythium_aphanidermatum"/>
        <genome name="pythium_arrhenomanes"/>
        <genome name="pythium_irregulare"/>
        <genome name="pythium_iwayamai"/>
        <genome name="pythium_vexans"/>

        <genome name="bigelowiella_natans"/>
        <genome name="emiliania_huxleyi"/>
        <genome name="entamoeba_histolytica"/>
        <genome name="giardia_intestinalis_gca000002435v2"/>
        <genome name="guillardia_theta"/>
        <genome name="hyaloperonospora_arabidopsidis"/>
        <genome name="paramecium_tetraurelia"/>
        <genome name="phaeodactylum_tricornutum"/>
        <genome name="tetrahymena_thermophila"/>
      </species_set>
    </all_vs_all>

  </pairwise_alignments>

  <gene_trees>
    <protein_trees collection="default"/>
  </gene_trees>

</compara_db>
